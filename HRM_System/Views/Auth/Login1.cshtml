@model Domains.ViewModels.LoginViewModel;

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LoginLayout_WPboard.cshtml";
    //Layout = null;
}



<div class="EntrybodyContainer">
    <div class="mainContainer">

        @await Html.PartialAsync("/Views/Auth/_CompDescription.cshtml")

        <div class="loginColContainer">
            <div class="loginBox">
                <div class="logintab">
                    <ul>
                        <li class="listactive" id="login">Login</li>
                        <li id="register">Register</li>
                    </ul>
                </div>

                <div class="loginContainer">
                    <div class="modalheader">
                        <span>Log In</span>
                        <p>Please Enter your Credentials</p>
                        <p class="text-danger" id="successMessage">@ViewBag.ErrorMessage</p>
                    </div>
                    <div class="LogininputFieldContainer">

                        <form asp-action="Login" asp-controller="Auth" asp-route-ReturnUrl="@ViewBag.ReturnUrl" autocomplete="off">

                            <div class="formTextGroup">
                                <label asp-for="Username">Email ID</label>
                                <div class="inputWrapper">
                                    <div class="input">
                                        <input type="email" asp-for="Username" placeholder="Email ID">
                                        <i class="fa-regular fa-user fa-lg"></i>
                                    </div>

                                </div>
                            </div>

                            <div class="formTextGroup">
                                <label asp-for="Password">Password</label>
                                <div class="inputWrapper">
                                    <div class="input">
                                        <input type="password" asp-for="Password" placeholder="Password">
                                        <i class="fa-solid fa-key fa-lg"></i>
                                    </div>
                                    <div class="errorIcon" style="display: none;">
                                        <i class="text-danger fa-solid fa-xmark fa-lg"></i>
                                        <span class="text-danger errorMessage">Incorrect Password</span>
                                    </div>
                                </div>
                            </div>
                            <div class="forgetpasslink">
                                <a href="#">Forgot Password?</a>
                            </div>

                            <div class="resbtnPrimary">
                                <button type="submit">Login <i class="fa-sharp fa-solid fa-right-to-bracket fa-lg"></i></button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





