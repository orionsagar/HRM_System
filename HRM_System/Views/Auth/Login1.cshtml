                            <label asp-for="Username">Email ID</label>
                            <div class="input">
                                <input type="email" asp-for="Username" placeholder="Email ID">
                                <i class="fa-sharp fa-regular fa-envelope fa-sm"></i>
                            </div>
                        </div>

                        <div class="resformTextGroup">
                            <label asp-for="Password">Password</label>
                            <div class="input">
                                <input type="password" asp-for="Password" placeholder="Password">
                                <i class="fa-solid fa-key fa-sm"></i>
                            </div>
                        </div>

                        <div class="resLoginLinks">
