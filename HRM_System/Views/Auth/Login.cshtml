<div class="rightSignInWrapper">
    <div class="rightContentWrapper">
        <div class="logo">
            <img src="/Images/assets/Logo/WP-l.png" alt="Company Logo">
        </div>

        <div class="SignInContainer">
            <div class="signInHeader">
                <span>Sign In</span>
            </div>

            <form asp-action="Login" asp-controller="Auth" asp-route-ReturnUrl="@ViewBag.ReturnUrl" autocomplete="off">
                <div class="formContainer">
                    <div class="msg">
                        @if (ViewBag.errormessage != null)
                        {
                            <Span class="messageServe text-danger" style="color: red !important;" data-Error="ServerError">@ViewBag.errormessage</Span>
                        }
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    </div>
                    <div class="signInTextGroup">
                        <input asp-for="Username" type="text" name="Username" data-Field="userName" placeholder="User Name" required="">

                        <!-- <label for="Will">UserName</label> -->
                    </div>
                    <div class="signInTextGroup">
                        <input asp-for="Password" type="password" name="password" placeholder="Password" data-Field="password" required="">
                        <!-- <label for="Wills">Password</label> -->
                    </div>
                    <div class="recaptchaGroup">
                        <script src='https://www.google.com/recaptcha/api.js'></script>
                        <div class="g-recaptcha" data-theme="light" data-type="image" data-sitekey="6LfhUYEpAAAAAIkIG4IEcWY6Nuui2EsQidwQXJYo"></div>
                    </div>


                    @*  /*=========================================================================*/
                        /*New codes from here regarding Registration form aside content 28/04/2024;*/
                        /*=========================================================================*/ *@

                    <div class="SupportLinks">
                        <ul>
                            <li>
                                <a asp-controller="Auth" asp-action="PasswordReset">Forgot your Password?</a>
                            </li>
                            <li>
                                <a asp-controller="Auth" asp-action="Register" class="RedText">Register Now</a>
                            </li>
                        </ul>
                    </div>
                    @*           /*=========================================================================*/
                        /*New codes from here regarding Registration form aside content 28/04/2024;*/
                        /*=========================================================================*/ *@


                    <!-- <div class="captcha">
                        <div class="signinCheck">
