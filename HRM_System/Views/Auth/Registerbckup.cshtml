</div>







@section Scripts {   

    <script src="~/custom_theme/js/index.js"></script>

    <script>
         $("#btnReg").click(function () {
             let form = $('#main');
             let formData = new FormData(form[0]);
             $.ajax({
                 url: '/userinfo/create',
                 type: 'POST',
                 data: formData,
                 processData: false,
                 contentType: false,
                 cache: false,
                 enctype: 'multipart/form-data',// Set to false, the browser will set the correct content type
                 success: function (data, status, xhr) {
                     console.log(data);
                     window.location.href = 'login1'
                 },
                 error: function (xhr, status, error) {
                    console.log(error)
                 },
                 complete: function () {
                 }
             });
         });
    </script>
}

<script>
    $("#btnResReg").click(function () {
        let form = $('#resMain');
        let formData = new FormData(form[0]);
        $.ajax({
            url: '/userinfo/create',
            type: 'POST',
            data: formData,
            processData: false,
            contentType: false,
            cache: false,
            enctype: 'multipart/form-data',// Set to false, the browser will set the correct content type
            success: function (data, status, xhr) {
                console.log(data);
                window.location.href = '/auth/login1'
            },
            error: function (xhr, status, error) {
                console.log(error)
            },
            complete: function () {
            }
        });
    });
</script>