                        <div class="resformTextGroup">
                            <label asp-for="Phone">Phone</label>
                            <div class="input">
                                <input type="text" asp-for="Phone" placeholder="Phone Number">
                                <i class="fa-sharp fa-solid fa-building fa-sm"></i>
                            </div>
                        </div>

                        <div class="resformTextGroup">
                            <label asp-for="UserName">Email</label>
                            <div class="input">
                                <input type="email" asp-for="UserName" placeholder="E-Mail ID">
                                <i class="fa-sharp fa-regular fa-envelope fa-sm"></i>
                            </div>
                        </div>

                        <div class="resformTextGroup">
                            <label asp-for="FirstName">First Name</label>
                            <div class="input">
                                <input type="text" asp-for="FirstName" placeholder="Fist Name">
                                <i class="fa-sharp fa-regular fa-user fa-sm"></i>
                            </div>
                        </div>

                        <div class="resformTextGroup">
                            <label asp-for="LastName">Last Name</label>
                            <div class="input">
                                <input type="text" asp-for="LastName" placeholder="Last Name">
                                <i class="fa-sharp fa-regular fa-user fa-sm"></i>
                            </div>
                        </div>

                         <div class="resformTextGroup">
                            <label asp-for="Password">Password</label>
                            <div class="input">
                                <input type="password" asp-for="Password" placeholder="Password">
                                <i class="fa fa-eye" id="Password"></i>
                            </div>
                        </div>

                        <div class="resformTextGroup">
                            <label asp-for="ConfirmPassword">Confirm Password</label>
                            <div class="input">
                                <input type="password" asp-for="ConfirmPassword" placeholder="Confirm Password">
                                <i class="fa fa-eye" id="Password"></i>
                            </div>
                        </div>


                        <div class="resbtnPrimary" style="width: 93%;">
                            <button type="submit" id="btnResReg">Register <i class="fa-sharp fa-solid fa-right-to-bracket fa-lg"></i></button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="resCompanyContents">
