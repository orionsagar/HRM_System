).attr(disabled, true);    })    $('#Email').on('input', function () {        var email = $(this).val();        var isValid = validateEmail(email);        if (isValid) {            $.get("/auth/checkemail", { Email: email }, function (data, status) {                if (data == "") {                    $('#submit').prop('disabled', !isValid);                    $('#erroremail').text('').hide();                } else {                    $('#erroremail').text(data).show();                    $('#submit').prop('disabled', isValid);                }            })                .fail(function (jqXHR, textStatus, errorThrown) {                    $('#erroremail').text('An error occurred: ' + errorThrown);                });        } else {
            $('#erroremail').toggle(!isValid);
        }    });    $('#submit').on('click', function () {        var email = $('#Email').val();        $.post('/auth/passwordreset', { Email: email }, function (data,status) {
            console.log(data);
        }).fail(function (jqXHR, textStatus, errorThrown) {
            console.log(errorThrown);
        })
    })    function validateEmail(email) {        var re = /\S+@@\S+\.\S+/;        return re.test(email);    }</script>