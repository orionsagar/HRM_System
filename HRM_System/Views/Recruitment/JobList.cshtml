@model IEnumerable<Department>
@{
    ViewData["Title"] = "Job List";
}

@section PageName {
    Job List
}
@section Breadcrumb {
    <a href="/department/index">
        <i class="fa fa-home"></i>
    </a>
    <span class="Divider">/</span>
    <span class="section activeCrum">Job List</span>
}

<div class="page-body">
    <div class="row">
        <div class="col-sm-12">
            <!-- Ajax data source (Arrays) table start -->
            <div class="card">
                <div class="card-block">
                    <div class="form-group d-none">
                        <label class="control-label col-md-6">Organisation</label>
                        <div class="col-md-12">
                            <select class="form-control" id="OrgId" asp-items="ViewBag.OrgId">
                            </select>
                        </div>
                    </div>
                    <div class="table-responsive dt-responsive">
                        <table id="dt-joblist" class="table table-striped table-bordered nowrap">
                            <thead>
                                <tr>
                                    <th>JobId</th>
                                    <th>Job Type</th>
                                    <th>Job Title</th>
                                    <th>Department</th>
                                    <th>Description</th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- Ajax data source (Arrays) table end -->
        </div>
    </div>
</div>

<input type="hidden" id="IsView" name="IsView" value="@ViewBag.IsView" />
<input type="hidden" id="IsAdd" name="IsAdd" value="@ViewBag.IsAdd" />
<input type="hidden" id="IsDelete" name="IsDelete" value="@ViewBag.IsDelete" />
<input type="hidden" id="IsEdit" name="IsEdit" value="@ViewBag.IsEdit" />

@section Scripts {
    <partial name="_ValidationScriptsPartial.cshtml" />
    <script>
        $('#OrgId').select2();
    </script>
}
