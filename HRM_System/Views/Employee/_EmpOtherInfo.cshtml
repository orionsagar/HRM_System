@model EmployeeOtherInfo

@inject IGlobalHelper _global;
@{
    //var compId = DataEncryption.DecryptString(_http.HttpContext.Request.Cookies["CompID"]);
    //var userId = DataEncryption.DecryptString(_http.HttpContext.Request.Cookies["UserID"]);
    var compId = _global.GetCompID();
    var userId = _global.GetUserID();
}

<form method="post" enctype="multipart/form-data" id="detailsForm" novalidate>
    @if (Model == null)
    {
        <input type="hidden" asp-for="EmpOtherInfoID" value="0" />

        <input type="hidden" id="Details_AddedBy" value="@userId" />
        <input type="hidden" id="Details_UpdatedBy" />
        <input type="hidden" id="Details_AddedDate" value="@DateTime.Now" />
        <input type="hidden" id="Details_UpdatedDate" />
    }
    else
    {
        <input type="hidden" asp-for="EmpOtherInfoID" />

        <input type="hidden" id="Details_AddedBy" value="@Model.AddedBy" />
        <input type="hidden" id="Details_UpdatedBy" value="@userId" />
        <input type="hidden" id="Details_AddedDate" value="@Model.AddedDate" />
        <input type="hidden" id="Details_UpdatedDate" value="@DateTime.Now" />
    }
    <div class="row">
        <div class="col-sm-4">
            <div class="form-group row">
                <label asp-for="ContractStartDate" class="col-sm-7 col-form-label"></label>
                <div class="col-sm-7">
                    <input asp-for="ContractStartDate" type="text" class="form-control form-control-sm" />
                    <span asp-validation-for="ContractStartDate" class="text-danger messages"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ContractEndDate" class="col-sm-8 col-form-label"></label>
                <div class="col-sm-7">
                    <input asp-for="ContractEndDate" type="text" class="form-control form-control-sm" />
                    <span asp-validation-for="ContractEndDate" class="text-danger"></span>
                </div>
            </div>

        </div>

        <div class="col-sm-4">
            <div class="form-group row">
                <label asp-for="ReportingAuthority" class="col-sm-7 col-form-label"></label>
                <div class="col-sm-8">
                    <select asp-for="ReportingAuthority" asp-items="ViewBag.Employee" class="form-control form-control-sm">
                    </select>
                    <span asp-validation-for="ReportingAuthority" class="text-danger"></span>
                </div>
            </div>




        </div>

        <div class="col-sm-4">
            <div class="form-group row">
                <label asp-for="LeaveSanctionAuthority" class="col-sm-6 col-form-label"></label>
                <div class="col-sm-8">
                    <select asp-for="LeaveSanctionAuthority" asp-items="ViewBag.Employee" class="form-control form-control-sm">
                    </select>
                    <span asp-validation-for="LeaveSanctionAuthority" class="text-danger"></span>
                </div>
            </div>

        </div>


    </div>

    <div class="row mt-2">
        <div class="col-sm-12">
            <div class="form-group row">
                <label class="col-sm-5"></label>
                <div class="col-sm-7">
                    <input type="submit" id="btnDetails" value="Submit" class="btn btn-sm btn-primary m-b-0" />
                </div>
            </div>
        </div>
    </div>
</form>