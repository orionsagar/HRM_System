
@{
    ViewData["Title"] = "Employee List";
}


@section PageName {
    Employee List
}
@section Breadcrumb {
    <a href="/Employee/index">
        <i class="fa fa-home"></i>
    </a>
    <span class="Divider">/</span>
    <span class="section activeCrum">Employee List</span>
}


<style>
    .badge-success {
        color: white;
        background-color: green;
        font-size: .8rem;
        font-weight: normal;
        padding: 2px 5px;
    }

    .badge-temp-suspend {
        color: red;
        background-color: #FFF6F6;
        border: 1px solid red;
        font-size: .8rem;
        font-weight: normal;
        padding: 2px 5px;
    }

    .badge-force-retirement {
        color: #FE9200;
        background-color: #FFF0DC;
        border: 1px solid #FE9200;
        font-size: .8rem;
        font-weight: normal;
        padding: 2px 5px;
    }

    .badge-default {
        color: white;
        background-color: black;
    }

</style>

<div class="row m-b-10">
    <div class="col-sm-12">
        <!-- Column Rendering table start -->
        <div class="card">
            <div class="card-block">
                @await Component.InvokeAsync("EmployeeFilter")

                <a href="@Url.Action("AllEmployeeReport", "Employee")" class="btn btn-md btn-primary" target="_blank">PDF Report</a>
                <div class="table-responsive dt-responsive">
                    <table id="dt-employee" class="table table-hover nowrap">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Card No</th>
                                <th>Employee Name</th>
                                <th>DOB</th>
                                <th>Mobile</th>
                                <th>Email</th>
                                <th>Designation</th>
                                <th>Nationality</th>
                                <th>NI Number</th>
                                <th>Visa Expired</th>
                                <th>Passport No</th>
                                <th>Address</th>
                                <th></th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
        <!-- Column Rendering table end -->
    </div>
</div>
<input type="hidden" id="IsView" name="IsView" value="@ViewBag.IsView" />
<input type="hidden" id="IsAdd" name="IsAdd" value="@ViewBag.IsAdd" />
<input type="hidden" id="IsDelete" name="IsDelete" value="@ViewBag.IsDelete" />
<input type="hidden" id="IsEdit" name="IsEdit" value="@ViewBag.IsEdit" />






@section Scripts {

}