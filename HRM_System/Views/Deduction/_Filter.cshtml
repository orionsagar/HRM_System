<div class="col-sm-3">

    <div class="form-group row mt-1">
        <label asp-for="FromDate_Filter" class="col-sm-12 col-form-label">From Date</label>
        <div class="col-sm-12">
            <input asp-for="FromDate_Filter" type="text" class="form-control form-control-sm" />
            <span asp-validation-for="FromDate_Filter" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mt-1">
        <label asp-for="ToDate_Filter" class="col-sm-12 col-form-label">To Date</label>
        <div class="col-sm-12">
            <input asp-for="ToDate_Filter" type="text" class="form-control form-control-sm" />
            <span asp-validation-for="ToDate_Filter" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mt-1">
        <label asp-for="Type_Filter" class="col-sm-12 col-form-label">Type</label>
        <div class="col-sm-12">

            <select asp-for="Type_Filter" required class="form-control form-control-sm">
                @if (String.IsNullOrEmpty(ViewBag.DeductionTypeName))
                {
                    <option value="TAX">TAX</option>
                    <option value="Welfare">Welfare</option>
                    <option value="Stamp">Stamp</option>
                    <option value="Conpensation">Conpensation</option>
                    <option value="Others">Others</option>
                }
                else if (ViewBag.DeductionTypeName == "Fooding")
                {
                    <option value="Lunch">Lunch</option>
                }
                else if (ViewBag.DeductionTypeName == "Absent")
                {
                    <option value="Absent">Absent</option>
                }

            </select>
            <span asp-validation-for="ToDate_Filter" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row justify-content-around mt-1 ml-0">
        <button type="button" id="btnDeductionFind" class="btn btn-sm btn-primary">Find Deduction</button>
    </div>



</div>

