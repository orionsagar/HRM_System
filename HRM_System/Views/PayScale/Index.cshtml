
@{
    var text = "PayScale";
    ViewData["Title"] = $"{text} List";
    Layout = "~/Views/Shared/_Main_Layout.cshtml";
}


@section PageName {
    Pay Scale List
}
@section Breadcrumb {
    <a href="/payscaletype/index">
        <i class="fa fa-home"></i>
    </a>
    <span class="Divider">/</span>
    <span class="section activeCrum">Pay Scale List</span>
}

<div class="page-body">
    <div class="row">
        <div class="col-sm-12">
            <!-- Ajax data source (Arrays) table start -->
            <div class="card">
                <div class="card-header">
                    <a asp-action="Create" class="btn waves-effect waves-light btn-primary  btn-sm btn-outline-primary @ViewBag.IsAdd"><i class="icofont icofont-ui-add"></i> Add New</a>
                </div>
                <div class="card-block">
                    <div class="table-responsive dt-responsive">
                        <table id="dt-payscale" class="table table-striped table-bordered nowrap">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Grade/Scale</th>
                                    <th>Pay Scale Group</th>
                                    @*<th>Rule Name</th>*@
                                    <th>Basic</th>
                                    <th>House Rent</th>
                                    <th>Medical</th>
                                    <th>Conveyance</th>
                                    <th>Food</th>
                                    <th>Total Salary</th>
                                    @*<th>Yearly Incr Rate</th>
                                    <th>Year Of Incr</th>
                                    <th>Incr Amnt</th>
                                    <th>Last Pay</th>*@
                                    <th>ByGross?</th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- Ajax data source (Arrays) table end -->
        </div>
    </div>
</div>
<!-- Page-body end -->
<input type="hidden" id="IsView" name="IsView" value="@ViewBag.IsView" />
<input type="hidden" id="IsAdd" name="IsAdd" value="@ViewBag.IsAdd" />
<input type="hidden" id="IsDelete" name="IsDelete" value="@ViewBag.IsDelete" />
<input type="hidden" id="IsEdit" name="IsEdit" value="@ViewBag.IsEdit" />

@section Scripts {

}