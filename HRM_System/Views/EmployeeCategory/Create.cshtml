@model EmployeeCategory

@{
    ViewData["Title"] = "Category Add";

    var action = ViewBag.Action;
    var result = action;
}
@section PageName {
    Category List
}
@section Breadcrumb {
    <a href="/employeecategory/index">
        <i class="fa fa-home"></i>
    </a>
    <span class="Divider">/</span>
    <a href="/employeecategory/index">
        <span class="section">Category List</span>
    </a>
    <span class="Divider">/</span>
    <span class="section activeCrum">
        @if (ViewBag.Action == "Add")
        {
            <span> Add</span>
        }
        else if (ViewBag.Action == "Edit")
        {
            <span> Edit</span>
        }
        else if (ViewBag.Action == "Delete")
        {
            <span> Delete</span>
        }
    </span>
}

@{

}

<div class="page-body">
    <div class="row">
        <div class="col-sm-12">
            <!-- Basic Inputs Validation start -->
            @* <div class="card-header">
                @await Component.InvokeAsync("PageHeader", pageHeader)
                </div> *@


            <form id="main" asp-action="Create" method="post" class="form-material" novalidate>
                <div class="card">
                    <div class="card-block">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row justify-content-center">
                            <div class="col-sm-6">
                                <div class="form-group row">
                                    <input type="hidden" asp-for="EmpCatId" />
                                    <input type="hidden" asp-for="AddedBy" />
                                    <input type="hidden" asp-for="UpdatedBy" />
                                    <input type="hidden" asp-for="AddedDate" />
                                    <input type="hidden" asp-for="UpdatedDate" />
                                    <input type="hidden" asp-for="CompId" />

                                </div>
                                <div class="form-group row d-none">
                                    <label asp-for="OrgId" class="col-sm-6 col-form-label">Organisation</label>
                                    <div class="col-sm-12">
                                        <select asp-for="OrgId" asp-items="ViewBag.OrgId" class="form-control form-control-sm" required>
                                        </select>
                                        <span asp-validation-for="OrgId" class="text-danger form-bar"></span>
                                    </div>
                                </div>

                                <div class="form-group form-default preFilledText">
                                    <input asp-for="Name" id="Name" placeholder="" class="form-control" required />
                                    <span asp-validation-for="Name" class="text-danger  form-bar"></span>
                                    <label asp-for="Name" class="float-label">Name</label>
                                </div>


                                <div class="form-group form-default preFilledText" style="display:none;">
                                    <input asp-for="NameGeneric" placeholder="" class="form-control"  />
                                    <span asp-validation-for="NameGeneric" class="text-danger form-bar"></span>
                                    <label asp-for="NameGeneric" class="float-label">Bangla Name</label>
                                </div>


                                <div class="form-group form-default preFilledText">
                                    <input asp-for="Description" placeholder="" class="form-control" required />
                                    <span asp-validation-for="Description" class="text-danger form-bar"></span>
                                    <label asp-for="Description" class="float-label"></label>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-block actionBtnRight">
                                <input type="submit" value="Submit" class="btn btn-primary waves-effect waves-light m-r-20" />
                            </div>
                        </div>
                    </div>
                </div>
            </form>

            <!-- Basic Inputs Validation end -->
        </div>
    </div>
</div>
<input type="hidden" id="IsView" name="IsView" value="@ViewBag.IsView" />
<input type="hidden" id="IsAdd" name="IsAdd" value="@ViewBag.IsAdd" />
<input type="hidden" id="IsDelete" name="IsDelete" value="@ViewBag.IsDelete" />
<input type="hidden" id="IsEdit" name="IsEdit" value="@ViewBag.IsEdit" />

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
<script>
    $('#OrgId').select2();
</script>
}