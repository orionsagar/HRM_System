@{
    ViewData["Title"] = "User List";
}
@{

    string[] BCText = new string[] { "User Info List" };
    string[] BCLink = new string[] { "userinfo/index" };
    string createlink = "userinfo/create";
    string linkname = "Add New";
    PageHeaderProps pageHeader = new PageHeaderProps
            {
                PageTitle = "User Info",
                PageDesc = "User Info",
                PageCreateLink = createlink,
                PageCreateLinkName = linkname,
                BreadcrumbText = BCText,
                BreadcrumbLink = BCLink
            };
}

@section PageName {
    User List
}
@section Breadcrumb {
    <a href="/dashboard/index">
        <i class="fa fa-home"></i>
    </a>
    <span class="Divider">/</span>
    <a href="/userinfo/index">
        <span class="section activeCrum"> User List</span>
    </a>
}


<input type="hidden" id="IsView" name="IsView" value="@ViewBag.IsView" />
<input type="hidden" id="IsAdd" name="IsAdd" value="@ViewBag.IsAdd" />
<input type="hidden" id="IsDelete" name="IsDelete" value="@ViewBag.IsDelete" />
<input type="hidden" id="IsEdit" name="IsEdit" value="@ViewBag.IsEdit" />

<div class="page-body">
    <div class="row">
        <div class="col-sm-12">
            <!-- Ajax data source (Arrays) table start -->
            <div class="card">
                @* <div class="card-header">
                @await Component.InvokeAsync("PageHeader", pageHeader)
                </div> *@
                <div class="card-block">
                    @*<div class="my-2">
                    <button id="btnPreview" class="btn btn-info btn-round waves-effect waves-light" style="width: 80px !important">Preview</button>
                    </div>*@
                    <div class="col-sm-12 row ">
                        <div class="col-sm-2 @ViewBag.IsAdd">
                            <a href="/userinfo/create" class="btn waves-effect waves-light btn-primary  btn-sm btn-outline-primary"><i class="icofont icofont-ui-add"></i> Add New</a>
                        </div>
                        <div class="col-sm-3 @ViewBag.RoleType">
