
@{
    ViewData["Title"] = "Company List";
}

@{

    string[] BCText = new string[] { "Company List" };
    string[] BCLink = new string[] { "companys/index" };
    string createlink = "companys/create";
    string linkname = "Add New";
    string isadd = ViewBag.IsAdd;
    PageHeaderProps pageHeader = new PageHeaderProps
    {
        PageTitle = "Company Info",
        PageDesc = "Company Info",
        PageCreateLink = createlink,
        PageCreateLinkName = linkname,
        BreadcrumbText = BCText,
        BreadcrumbLink = BCLink,
        IsAdd = isadd
    };
}


<!-- Page-body start -->
<div class="page-body">
    <div class="row">
        <div class="col-sm-12">
            <!-- Ajax data source (Arrays) table start -->
            <div class="card">
                <div class="card-header">

                    @await Component.InvokeAsync("PageHeader", pageHeader)

                </div>
                <div class="card-block">
                    <div class="table-responsive dt-responsive">
                        <table id="dt-companylist" class="table table-striped table-bordered nowrap">
                            <thead>
                                <tr>
                                    <th>CompID</th>
                                    <th>Name</th>
                                    <th>Address</th>
                                    <th>Phone</th>
                                    <th>Bkash</th>
                                    <th>Email</th>
                                    <th>Website</th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
            <!-- Ajax data source (Arrays) table end -->
        </div>
    </div>
</div>
<!-- Page-body end -->
        
<input type="hidden" id="IsView" name="IsView" value="@ViewBag.IsView" />
<input type="hidden" id="IsAdd" name="IsAdd" value="@ViewBag.IsAdd" />
<input type="hidden" id="IsDelete" name="IsDelete" value="@ViewBag.IsDelete" />
<input type="hidden" id="IsEdit" name="IsEdit" value="@ViewBag.IsEdit" />



@section Scripts {
    <script>
        var isedit = $('#IsEdit').val();
        console.log(isedit);
    </script>
}